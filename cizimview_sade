package com.appservisi.canvas2;


import androidx.appcompat.app.AppCompatActivity;

import android.content.Context;
import android.graphics.Color;
import android.graphics.Paint;
import android.graphics.Path;
import android.os.Bundle;
import android.view.MotionEvent;
import android.view.View;
import android.graphics.Canvas;

import android.widget.LinearLayout;
import android.widget.TextView;

public class CizmeOr extends AppCompatActivity {

    CizimView cizimView;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        cizimView = new CizimView(this);
        setContentView(cizimView);
    }

    class CizimView extends View {
        private Path cizimYolu;
        private Paint cizimKalemi;
        private float x, y;
        private static final float DOKUNMA_TOLERANSI = 4;
        LinearLayout.LayoutParams linearLayout;
        public CizimView(Context context) {
            super(context);
            cizimYolu = new Path();
            cizimKalemi = new Paint();
            cizimKalemi.setAntiAlias(true);
            cizimKalemi.setColor(Color.BLACK);
            cizimKalemi.setStyle(Paint.Style.STROKE);
            cizimKalemi.setStrokeJoin(Paint.Join.ROUND);
            cizimKalemi.setStrokeWidth(8f);
            tv=new TextView(getContext());
            tv.setText("bu bir text");
            tv.setTextSize(20);
            linearLayout= new LinearLayout.LayoutParams(200,200);
            addContentView(tv,linearLayout);

        }
        TextView tv;
        @Override
        protected void onDraw(Canvas canvas) {
            super.onDraw(canvas);

            canvas.drawPath(cizimYolu, cizimKalemi);
        }

        @Override
        public boolean onTouchEvent(MotionEvent event) {
            float dokunulanX = event.getX();
            float dokunulanY = event.getY();

            switch (event.getAction()) {
                case MotionEvent.ACTION_DOWN:
                    tv.setTextColor(Color.YELLOW);
                    cizimYolu.moveTo(dokunulanX, dokunulanY);
                    x = dokunulanX;
                    y = dokunulanY;
                    return true;
                case MotionEvent.ACTION_MOVE:
                    cizimYolu.lineTo(dokunulanX, dokunulanY);
                    break;
                case MotionEvent.ACTION_UP:
                    cizimYolu.lineTo(dokunulanX, dokunulanY);
                    break;
                default:
                    return false;
            }

            invalidate();
            return true;
        }
    }
}
